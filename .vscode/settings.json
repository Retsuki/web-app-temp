{
  // エディタ設定
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },

  // Biome 設定
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // Tailwind CSS
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  // TypeScript
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // ファイル関連
  "files.exclude": {
    "**/node_modules": false,
    "**/.next": false,
    "**/dist": true,
    "**/.turbo": true
  },

  // 検索除外
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/coverage": true
  },

  // Git
  "git.autofetch": true,

  // スペルチェッカー
  "cSpell.words": [
    "artifactregistry",
    "biomejs",
    "cloudrun",
    "cloudrunv",
    "clsx",
    "drizzle",
    "Hono",
    "iamcredentials",
    "knative",
    "Mindaro",
    "openapi",
    "Retsuki",
    "secretmanager",
    "serviceaccount",
    "shadcn",
    "Supabase",
    "tailwindcss"
  ]
}
