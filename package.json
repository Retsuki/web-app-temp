{
  "name": "web_app_temp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prepare": "lefthook install",
    "dev": "concurrently \"npm --prefix app-api run dev\" \"npm --prefix app-web run dev\"",
    "idea": "npm --prefix .ideas run idea",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "npm --prefix app-api run typecheck && npm --prefix app-web run typecheck",
    "gen:api": "curl -X GET http://localhost:8080/api/v1/doc | tee ./app-web/openapi.json && npm --prefix app-web run gen:api",
    "db:build": "npm --prefix app-api run db:build",
    "db:generate": "npm --prefix app-api run db:generate",
    "db:push": "npm --prefix app-api run db:push",
    "db:migrate": "npm --prefix app-api run db:migrate",
    "db:check": "npm --prefix app-api run db:check",
    "db:seed": "npm --prefix app-api run db:seed",
    "setup": "node scripts/setup.mjs",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop --project-id web_app_temp",
    "supabase:db:reset": "supabase db reset",
    "secrets:web:upload": "bash scripts/env/upload-web-env.sh",
    "secrets:api:upload": "bash scripts/env/upload-api-env.sh",
    "secrets:upload:all": "npm run secrets:api:upload && npm run secrets:web:upload",
    "deploy:stripe-gateway": "bash scripts/gcp/deploy-stripe-gateway.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Retsuki/web-app-temp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Retsuki/web-app-temp/issues"
  },
  "homepage": "https://github.com/Retsuki/web-app-temp#readme",
  "description": "",
  "devDependencies": {
    "lefthook": "^1.10.10",
    "@biomejs/biome": "^2.0.5",
    "concurrently": "^9.2.0"
  }
}
