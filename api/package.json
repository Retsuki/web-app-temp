{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:build": "tsc",
    "dev:start": "tsc",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:seed": "tsx src/drizzle/db/seed/index.ts",
    "db:seed:sample": "tsx src/drizzle/db/seed/sample-plan-limits.ts",
    "db:check": "node -e \"console.error('⚠️  Disabled: use scoped commands (db:generate:<app> / db:push:<app>).'); process.exit(1)\"",
    "db:generate": "node -e \"console.error('⚠️  Disabled: use scoped commands (e.g. db:generate:sample).'); process.exit(1)\"",
    "db:push": "node -e \"console.error('⚠️  Disabled: use scoped commands (e.g. db:push:sample).'); process.exit(1)\"",
    "db:generate:sample": "drizzle-kit generate --config drizzle.sample.config.ts",
    "db:push:sample": "drizzle-kit migrate --config drizzle.sample.config.ts",
    "db:generate:om": "drizzle-kit generate --config drizzle.om.config.ts",
    "db:push:om": "drizzle-kit migrate --config drizzle.om.config.ts",
    "db:generate:pmt": "drizzle-kit generate --config drizzle.pmt.config.ts",
    "db:push:pmt": "drizzle-kit migrate --config drizzle.pmt.config.ts",
    "api:generate": "npx hygen api new",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:apply": "biome check --write .",
    "kill": "sh -c 'lsof -ti:$0 | xargs kill -9 2>/dev/null || echo \"No process running on port $0\"'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/vertexai": "^1.9.3",
    "@hono/node-server": "^1.14.4",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.17.1",
    "@hono/zod-validator": "^0.4.1",
    "@supabase/supabase-js": "^2.47.10",
    "axios": "^1.8.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "drizzle-seed": "^0.1.2",
    "firebase-admin": "^12.6.0",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.8.3",
    "hono-rate-limiter": "^0.4.2",
    "nanoid": "^5.0.7",
    "p-limit": "^6.2.0",
    "pino": "^9.6.0",
    "postgres": "^3.4.5",
    "sharp": "^0.33.5",
    "stripe": "^18.4.0",
    "uuid": "^11.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/node": "^20.11.17",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.29.1",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
